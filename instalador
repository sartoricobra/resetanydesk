                $appsTable.Controls.Add($appButton, $appCol, $appRow)
                $appButtons += $appButton
                if (++$appCol -ge 3) { $appCol = 0; $appRow++ }
            }
        }
        $groupBox.Controls.Add($appsTable)
        $masterTable.Controls.Add($groupBox, $col, $row)
        
